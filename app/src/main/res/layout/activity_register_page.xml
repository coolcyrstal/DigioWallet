<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".register.RegisterPage"
    android:background="#DDD">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/register_info">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:id="@+id/userinfo"
            android:background="#FFF">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/textFirstname"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                android:textColor="#777"
                android:hint="Firstname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/textLastname"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                android:textColor="#777"
                android:hint="Lastname"
                android:layout_below="@+id/textFirstname"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/textCitizenID"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                android:textColor="#777"
                android:hint="Citizen ID"
                android:layout_below="@+id/textLastname"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/user_mobileinfo"
            android:background="#FFF"
            android:layout_below="@+id/userinfo">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/text_createMobileNum"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColorHighlight="#777"
                android:textColorHint="#777"
                android:textColor="#777"
                android:hint="Mobile No." />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Next"
            android:background="#fb4f9f"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"/>
    </LinearLayout>

</RelativeLayout>
